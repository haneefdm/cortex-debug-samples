    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb/lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.out",
            "args": ["--blah"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "program": "${workspaceFolder}/main.exe",
                "miDebuggerPath": "C:/cygwin64/bin/gdb.exe"
            },
            "preLaunchTask": "build"
        }
    ]
}
